{
  "name": "@quizlord/api",
  "description": "Graphql api for sharing newspaper quizzes between friends, including results and statistics",
  "main": "index.js",
  "engines": {
    "node": "v20.8.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "prisma generate && doppler run -- nodemon src/index.ts",
    "debug": "prisma generate && doppler run -- nodemon --exec \"node --inspect --require ts-node/register src/index.ts\"",
    "test": "ts-mocha -p tsconfig.json src/**/*.test.ts",
    "lint": "eslint .",
    "db:generate": "prisma generate",
    "db:dev:migrate": "doppler run -- prisma migrate dev",
    "db:dev:reset": "doppler run -- prisma migrate reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielemery/quizlord-api.git"
  },
  "author": "Daniel Emery <danielremery@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielemery/quizlord-api/issues"
  },
  "homepage": "https://github.com/danielemery/quizlord-api#readme",
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@aws-sdk/client-s3": "^3.118.0",
    "@aws-sdk/client-sqs": "^3.118.0",
    "@aws-sdk/s3-request-presigner": "^3.118.0",
    "@aws-sdk/util-create-request": "^3.341.0",
    "@prisma/client": "^5.4.1",
    "@sentry/node": "^7.71.0",
    "@sentry/profiling-node": "^1.2.1",
    "axios": "^1.2.6",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "pg": "^8.7.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@dtdot/eslint-config": "^0.0.8",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.13",
    "@types/mocha": "^10.0.1",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.8.1",
    "typescript": "^5.0.4"
  }
}
